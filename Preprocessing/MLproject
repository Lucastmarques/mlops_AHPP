name: clean_data
conda_env: conda.yml

entry_points:
  main:
    parameters:
      input_artifact:
        description: Fully qualified name for the raw data artifact
        type: str
      artifact_name:
        description: Name for the W&B artifact that will be created
        type: str
      artifact_type:
        description: Type of the artifact to create
        type: str
        default: clean_data
      artifact_description:
        description: Description for the artifact
        type: str
      project_name:
        description: Name of W&B project
        type: str

    command: >-
      python preprocessing.py --input_artifact {input_artifact} \
                              --artifact_name {artifact_name} \
                              --artifact_type {artifact_type} \
                              --artifact_description {artifact_description} \
                              --project_name {project_name}